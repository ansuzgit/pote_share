<header class="header">
  <div class="header-inner">
    <div class="header-left-nav">
      <%= link_to root_path do %>
        <%= image_tag "logo.png" %>
      <% end %>
    </div>
    <div class="header-right-nav">
      <div class="nav-item">
        <% if logged_in? %>
          <li class="dropdown"> 
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= image_tag '/assets/default_icon-9263fc59c414b7228d256fc178dcb22183561357950a68f5ad086ba7ee054974.jpg' %><b class="caret"></b>
            </a>
            <ul class="dropdown-menu"> 
              <li><%= link_to "設定", current_user %></li>
              <li class="divider"></li> 
              <li><%= link_to "ログアウト", logout_path, method: :delete %></li>
            </ul>
          </li>
        <% else %>
          <%= link_to "ログイン","/login",{class: "btn btn-primary my-2 mx-3"} %>
          <%= link_to "登録する","/users/new",{class: "btn btn-secondary"} %>
        <% end %>
      </div>
    </div>
  </div>
</header>