<div class="container-fiuld room">
  <h4 class="pb-4"><%= "検索結果: #{ @posts.count }" %></h4>
  <div class="row">
    
    <% @posts.each do |po| %>
      <div class="col-sm-6 col-lg-4 col-xl-3">
        <div class="room-frame-inner">
          <div class="room-image-out">
            <%= link_to (image_tag  "#{ po.image_url(:thumb_show)}" ,class: "room-image"), "/posts/show/#{ po.id}"   %>
          </div>
          <div class="room-profile">
            <p class="room-profile-name"><%= po.name %></p>
            <p class="room-profile-city"><%= po.adress %></p>
            <p class="room-profile-price price-icon"><%= po.price %></p>
          </div>
        </div>
      </div>
    <% end %>
    
  </div>
</div>
