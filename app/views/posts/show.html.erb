<div class="container room-show">
  <div class="row">
    <div class="col-md-8">
      <%= link_to (image_tag  "#{@post.image_url(:thumb_show)}" ,class: "room-show-image"), "/posts/show/#{@post.id}"   %>
      <div class="room-show-detile">
        <div class="room-show-detile-icon">
          <%= link_to (image_tag  "#{@post.user.image.to_s}" ,class: "host-icon"), "/"   %>
        </div>
        <div class="room-show-profile">
          <p class="room-show-profile-name"><%= @post.name %></p>
          <p class="room-show-profile-address"><%= @post.adress %></p>
        </div>
      </div>
      <p class="room-show-detile-content"><%= @post.introduction %></p>
    </div>
    <div class="col-md-4">
      <div class="room-show-nav">
        <h5 class="price-icon"><%= @post.price %> / 日</h5>
        <div class="room-show-date-select">
          
          <%= form_with(model: @reservation ,local: true) do |f| %>
            
            <%= f.label :start_date , "開始日" %>
            <%= f.date_field :start_date , class: "form-control mb-4 oth-10" %>
            
            <%= f.label :end_date , "終了日" %>
            <%= f.date_field :end_date , class: "form-control mb-4  oth-10" %>
            
            <%= f.label :person_num , "人数" %>
            <%= f.number_field :person_num , class: "form-control mb-4  oth-10" %>
            
            <%= f.submit "予約する", class: "col-md-2 btn btn-primary mx-3 form-control oth-11" %>
          
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>