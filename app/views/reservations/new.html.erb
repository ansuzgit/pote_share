<div class="container reservations-new">
  <div class="row">
    <div class="col-6 offset-3">
      <div class="reservations-new-nav">
        <h4 class="reservations-new-check-content">予約内容確認</h4>
        <h5 class="price-icon"><%= @post.price %> / 日</h5>
        <div class="reservations-new-date-select">
          <%= form_with(model: @reservation, local: true) do |f| %>
             
            <%= f.label :start_date , "開始日" %>
            <%= f.date_field :start_date , :readonly => true, class: "form-control mb-4 oth-10" %>
            
            <%= f.label :end_date , "終了日" %>
            <%= f.date_field :end_date , :readonly => true, class: "form-control mb-4  oth-10" %>
            <h6 class="reservations-new-check-content">使用日数 : <%= (@reservation.end_date - @reservation.start_date).to_i %></h6>
            <%= f.label :person_num , "人数" %>
            <%= f.number_field :person_num , :readonly => true, class: "form-control mb-4  oth-10" %>
            <h6 class="reservations-new-check-content">合計金額 : <%= (@reservation.end_date - @reservation.start_date).to_i * @reservation.person_num * @post.price %></h6>
            <p class="reservations-new-check-content">上記内容でよろしければ「予約を確定」を押してください</p>
            <%= f.submit "予約を確定", class: "col-md-2 btn btn-primary mx-3 form-control oth-11" %>
          　<a class="btn btn-secondary form-control" href=<%= "/posts/show/#{@post.id}" %> >ルーム詳細に戻る</a>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>