<div class="container device">
  <div class="device_frame">
    <p class="my-4">ログイン</p>
    <div class="device_inner">
      <%= form_with(url: login_path, scope: :session, local: true) do |f| %>
      
        <div class="field form-row">
          <div class="col-2 required-b pt-2"></div>
          <%= f.email_field :email, :placeholder => "メールアドレス" ,class: "form-control col-10 px-2" %>
        </div>
        <div class="field form-row">
          <div class="col-2 required-b pt-2"></div>
          <%= f.password_field :password, :placeholder => "パスワード", class: "form-control col-10 px-2" %>
        </div>
    
        <%= f.label :remember_me, class: "checkbox inline" do %>
          <%= f.check_box :remember_me %>
          <span>次回から自動でログインする</span>
        <% end %>
    
        <%= f.submit "ログイン", class: "btn btn-primary" %>
      <% end %>
      <%= link_to "新しいアカウント作成", sign_up_path ,{class: "btn btn-secondary"} %>
    </div>
  </div>
</div>